@model vluCanteenAdmin.Models.Food1

@{
    ViewBag.Title = "Chi tiết món ăn";
}

<h2>Chi tiết món ăn</h2>

<div>
    <h4>Món ăn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Food_Name)
        </dd>

        <dt>
            Giá món ăn
        </dt>

        <dd>
            @String.Format("{0:n0}", Model.Price)
        </dd>

        <dt>
            Giảm giá
        </dt>

        <dd>
            @String.Format("{0:n0}", Model.Discount)
        </dd>

        <dt>
            Số lượng món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Remain)
        </dd>

        <dt>
            Thông tin món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Hình ảnh món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>

        <dt>
            Nằm trong menu chính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isToday)
        </dd>

        <dt>
            Loại món ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category1.Category1)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.Food_ID }) |
    @Html.ActionLink("Quay về trang chủ", "Index")
</p>
